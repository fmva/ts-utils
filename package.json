{
  "name": "ts-utils",
  "version": "1.0.0",
  "author": "V.Fomin",
  "main": "dist/index.js",
  "scripts": {
    "reinstall": "rm -rf node_modules/ dist/ && npm install",
    "remove": "rm -rf dist/",
    "build": "tsc --project ./tsconfig.build.json --outDir dist/",
    "lint": "eslint src/**",
    "prettier": "prettier --single-quote --list-different \"src/**/*.ts\" || echo 'Code formatting is not correct'\n",
    "prettier:fix": "prettier --write src/**/*.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/node": "^7.15.4",
    "@babel/plugin-transform-typescript": "^7.15.4",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@types/node": "^16.10.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  }
}
